{
  "name": "vue-designer",
  "main": "./lib/vue-designer",
  "version": "0.0.0",
  "description": "A short description of your package",
  "keywords": [],
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "watch": "run-p watch:*",
    "watch:ts": "tsc --watch -p tsconfig.main.json",
    "watch:webpack":
      "DEV=1 webpack-dev-server --hot --config webpack.config.js",
    "build": "tsc -p tsconfig.main.json && webpack --config webpack.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write \"{src,test}/**/*.ts\""
  },
  "repository": "https://github.com/ktsn/vue-designer",
  "license": "MIT",
  "publisher": "",
  "activationEvents": ["*"],
  "contributes": {
    "commands": [
      {
        "command": "extension.showVueComponentPreview",
        "title": "Show Vue Component Preview"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.showVueComponentPreview",
          "when": "resourceLangId == vue-html"
        }
      ]
    }
  },
  "engines": {
    "vscode": "^1.18.0"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "/test/.+\\.spec\\.(js|ts)$",
    "moduleFileExtensions": ["ts", "js", "json"]
  },
  "dependencies": {
    "vue": "^2.5.13",
    "vue-eslint-parser": "^2.0.1-beta.2",
    "vue-template-compiler": "^2.5.13",
    "ws": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/ws": "^3.2.1",
    "css-loader": "^0.28.7",
    "jest": "^22.0.3",
    "npm-run-all": "^4.1.2",
    "prettier": "1.9.2",
    "ts-jest": "^22.0.0",
    "ts-loader": "^3.1.1",
    "typescript": "^2.6.1",
    "vscode": "^1.1.9",
    "vue-loader": "^13.5.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.7"
  }
}
