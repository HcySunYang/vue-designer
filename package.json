{
  "name": "vue-designer",
  "main": "./lib/vue-designer",
  "version": "0.0.0",
  "description": "A short description of your package",
  "keywords": [],
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "watch": "run-p watch:*",
    "watch:ts": "tsc --watch -p tsconfig.main.json",
    "watch:webpack": "DEV=1 webpack-dev-server --hot --config webpack.config.js",
    "build": "tsc -p tsconfig.main.json && webpack --config webpack.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write \"{src,test}/**/*.{ts,vue}\""
  },
  "repository": "https://github.com/ktsn/vue-designer",
  "license": "MIT",
  "publisher": "",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.showVueComponentPreview",
        "title": "Show Vue Component Preview"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.showVueComponentPreview",
          "when": "resourceLangId == vue-html"
        }
      ]
    }
  },
  "engines": {
    "vscode": "^1.18.0"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.vue$": "vue-jest"
    },
    "testRegex": "/test/.+\\.spec\\.(js|ts)$",
    "moduleNameMapper": {
      "^@/(.+)$": "<rootDir>/src/$1",
      "^vue$": "vue/dist/vue.runtime.common.js"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "vue"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    }
  },
  "dependencies": {
    "k-css": "^2.0.0",
    "vue": "^2.5.13",
    "vue-eslint-parser": "^2.0.1-beta.2",
    "vue-template-compiler": "^2.5.13",
    "vuex": "github:ktsn/vuex#fc1f29b",
    "ws": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/ws": "^3.2.1",
    "@vue/test-utils": "^1.0.0-beta.10",
    "css-loader": "^0.28.7",
    "jest": "^22.0.3",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "prettier": "1.10.1",
    "sass-loader": "^6.0.6",
    "ts-jest": "^22.0.0",
    "ts-loader": "^3.1.1",
    "typescript": "^2.6.1",
    "vscode": "^1.1.9",
    "vue-jest": "^1.4.0",
    "vue-loader": "^13.5.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.7"
  }
}
