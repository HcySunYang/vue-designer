{
  "name": "vue-designer",
  "main": "./lib/vue-designer",
  "version": "0.0.0",
  "description": "A short description of your package",
  "keywords": [],
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "watch": "run-p watch:*",
    "watch:ts": "tsc --watch -p tsconfig.main.json",
    "watch:webpack": "webpack --watch --config webpack.config.js",
    "build": "tsc -p tsconfig.main.json && webpack --config webpack.config.js"
  },
  "repository": "https://github.com/ktsn/vue-designer",
  "license": "MIT",
  "publisher": "",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.showVueComponentPreview",
        "title": "Show Vue Component Preview"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.showVueComponentPreview",
          "when": "resourceLangId == vue-html"
        }
      ]
    }
  },
  "engines": {
    "vscode": "^1.18.0"
  },
  "dependencies": {
    "vue": "^2.5.8"
  },
  "devDependencies": {
    "css-loader": "^0.28.7",
    "npm-run-all": "^4.1.2",
    "ts-loader": "^3.1.1",
    "typescript": "^2.6.1",
    "vscode": "^1.1.9",
    "vue-loader": "^13.5.0",
    "vue-template-compiler": "^2.5.9",
    "webpack": "^3.8.1"
  }
}
